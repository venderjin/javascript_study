<!DOCTYPE html>
<html>
<head>
    <title>Document</title>
    <script>
        let output =''
        const size =5

        for (let i=0; i<size; i++) { //1번반복-2번반복-...-4번반복
            for (let j=size-1; j>i; j--) {
                output +='?'
            }
            for (let k=0; k<2*i+1; k++) {
                output +='*'
            }
            output += '\n'
        }
        for (let i=size-1; i>0; i--) { //4부터 1까지 4줄나옴
            for (let j=size; j>i; j--) {
                output +='?'
            }
            for (let k=1; k<=2*i-1; k++) {
                output +='*'
            }
            output += '\n'
        }
        
        console.log(output)
    </script>
</head>
<body>
    
</body>
</html>
